{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "nodenext",
    "types": [
      "reflect-metadata",
      "node",
    ],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "packages",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.cjs"
  ]
}
